extends ../common/layout 

block content
  <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
  <div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
      <!--begin::Notice-->

      <div class="alert alert-custom alert-white alert-shadow gutter-b alert-text" role="alert">
        <div class="alert-icon">
          <span class="svg-icon svg-icon-primary svg-icon-xl">
            <!--begin::Svg Icon | path:assets/media/svg/icons/Tools/Compass.svg-->
            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
              <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <rect x="0" y="0" width="24" height="24" />
                <path d="M7.07744993,12.3040451 C7.72444571,13.0716094 8.54044565,13.6920474 9.46808594,14.1079953 L5,23 L4.5,18 L7.07744993,12.3040451 Z M14.5865511,14.2597864 C15.5319561,13.9019016 16.375416,13.3366121 17.0614026,12.6194459 L19.5,18 L19,23 L14.5865511,14.2597864 Z M12,3.55271368e-14 C12.8284271,3.53749572e-14 13.5,0.671572875 13.5,1.5 L13.5,4 L10.5,4 L10.5,1.5 C10.5,0.671572875 11.1715729,3.56793164e-14 12,3.55271368e-14 Z" fill="#000000" opacity="0.3" />
                <path d="M12,10 C13.1045695,10 14,9.1045695 14,8 C14,6.8954305 13.1045695,6 12,6 C10.8954305,6 10,6.8954305 10,8 C10,9.1045695 10.8954305,10 12,10 Z M12,13 C9.23857625,13 7,10.7614237 7,8 C7,5.23857625 9.23857625,3 12,3 C14.7614237,3 17,5.23857625 17,8 C17,10.7614237 14.7614237,13 12,13 Z" fill="#000000" fill-rule="nonzero" />
              </g>
            </svg>
          </span>
        </div>
        <div class="alert-text">
          <div class="d-flex align-items-baseline mr-5">
            <!--begin::Page Title-->
            <h2 class="subheader-title text-dark font-weight-bold my-2 mr-3">Pre Schedule Visitor Management</h2>
            <!--end::Page Title-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold my-2 p-0">
              <li class="breadcrumb-item">
                <a href="" class="text-muted">Manage</a>
              </li>
              <li class="breadcrumb-item">
                <a href="" class="text-muted">List</a>
              </li>

            </ul>
            <!--end::Breadcrumb-->

        </div>
      </div>
    </div>
    <!--end::Notice-->
    if message != ''
      <div class="alert alert-success" role="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>#{message}</strong>
      </div>
    <!--begin::Card-->
    <div class="card card-custom">
      <div class="card-header" style="background:rgb(240,240,240)">
        <div class="card-title">
          <span class="card-icon">
            <i class="fa fa-cog"></i>
          </span>
          <h3 class="card-label">#{title}</h3>
        </div>
        <div class="card-toolbar">

          <!--begin::Button-->
          <a href="/schedule/create" class="btn btn-success font-weight-bolder newRecord">
            <i class="la la-plus"></i>Add A preschedule</a>
            <!--end::Button-->
          </div>
        </div>
        <div class="card-body">
          <!--begin: Datatable-->
          <table class="table table-bordered table-hover table-checkable" id="kt_datatable">
            <thead>
              <tr style="background-color: #ebecf0">
                <th>User Id</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Role</th>
                <th>Action</th>
              </tr>
            </thead>
          </table>
          <!--end: Datatable-->
        </div>
      </div>
      <!--end::Card-->
    </div>
    <!--end::Container-->
  </div>
  </div>

  block extra_script

    script.
      KTDatatablesDataSourceAjaxServer = function() {
        var initTable1 = function() {
        base_url = '/user-ajax-datatable';
          $('#kt_datatable').DataTable({
            "responsive": true,
            "paging": true,
            "pageLength": 10,
            "searchDelay": 500,
            "processing": true,
            "serverSide": true,
            "ajax": {
              "url" : base_url,
              'type': 'GET',
            },
            columns: [
              {"data": '_id'},
              {"data": 'name'},
              {"data": 'email'},
              {"data": 'status'},
              {"data": 'role'},
              {"data": 'action'},
            ]
          });
        };
        return {
          init: function() {
            initTable1();
          },
        };
      }();
      $(document).ready(function() {
        KTDatatablesDataSourceAjaxServer.init();
      });