extends ../common/layout

block content
  <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="d-flex flex-column-fluid">
      <div class="container">
        <!--begin::Notice-->

        <div class="alert alert-custom alert-white alert-shadow gutter-b alert-text" role="alert">
          <div class="alert-icon">
            <span class="svg-icon svg-icon-primary svg-icon-xl">
              <!--begin::Svg Icon | path:assets/media/svg/icons/Tools/Compass.svg-->
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                  <rect x="0" y="0" width="24" height="24" />
                  <path d="M7.07744993,12.3040451 C7.72444571,13.0716094 8.54044565,13.6920474 9.46808594,14.1079953 L5,23 L4.5,18 L7.07744993,12.3040451 Z M14.5865511,14.2597864 C15.5319561,13.9019016 16.375416,13.3366121 17.0614026,12.6194459 L19.5,18 L19,23 L14.5865511,14.2597864 Z M12,3.55271368e-14 C12.8284271,3.53749572e-14 13.5,0.671572875 13.5,1.5 L13.5,4 L10.5,4 L10.5,1.5 C10.5,0.671572875 11.1715729,3.56793164e-14 12,3.55271368e-14 Z" fill="#000000" opacity="0.3" />
                  <path d="M12,10 C13.1045695,10 14,9.1045695 14,8 C14,6.8954305 13.1045695,6 12,6 C10.8954305,6 10,6.8954305 10,8 C10,9.1045695 10.8954305,10 12,10 Z M12,13 C9.23857625,13 7,10.7614237 7,8 C7,5.23857625 9.23857625,3 12,3 C14.7614237,3 17,5.23857625 17,8 C17,10.7614237 14.7614237,13 12,13 Z" fill="#000000" fill-rule="nonzero" />
                </g>
              </svg>

            </span>
          </div>
          <div class="alert-text">
            <div class="d-flex align-items-baseline mr-5">
              <!--begin::Page Title-->
              <h2 class="subheader-title text-dark font-weight-bold my-2 mr-3">Employee Management</h2>
              <!--end::Page Title-->
              <!--begin::Breadcrumb-->
              <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold my-2 p-0">
                <li class="breadcrumb-item">
                  <a href="" class="text-muted">Manage</a>
                </li>
                <li class="breadcrumb-item">
                  <a href="" class="text-muted">List</a>
                </li>
              </ul>
              <!--end::Breadcrumb-->

          </div>
        </div>
    </div>
    <!--end::Notice-->
      if message != ''
        <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>#{message}</strong>
        </div>

      <div class="card card-custom">
        <div class="card-header" style="background-color: #ebecf0">
          <h3 class="card-title">
            <i class="fa fa-users"></i>&nbsp;&nbsp;Add Employee
          </h3>
          <div class="card-toolbar">
            <div class="example-tools justify-content-center">
              <button type="button" class="btn btn-success mr-2" id="employeesave"><i class="fa fa-save"></i>Submit</button>
            </div>
          </div>
        </div>
      </div>

        <form action="/employee/store" method="post" id="employeesaveform" autocomplete="off">
        <div class="row">
          <div class="col-md-6">
            <div class="card-body" style="padding: 1rem 2.25rem !important;">

              <div class="form-group row" >
                <label for="example-tel-input" class="col-4 col-form-label">Employee Name</label>
                <div class="col-8">
                  <input class="form-control form-control-solid" value="" name="name" placeholder="Enter employee name" type="text" />
                </div>
              </div>
              <div class="form-group row margin18" >
                <label for="example-tel-input" class="col-4 col-form-label">Mobile No</label>
                <div class="col-8">
                  <input class="form-control form-control-solid" value="" name="mobile" id="" placeholder="Enter mobile no" type="text" />
                </div>
              </div>
              <div class="form-group row margin18" >
                <label for="example-tel-input" class="col-4 col-form-label">Date of Joining</label>
                <div class="col-8">
                  <input class="form-control form-control-solid" value="" name="joining" id="strength" placeholder="Enter mobile no" type="date" />
                </div>
              </div>
            </div>
          </div>

            <div class="col-md-6">
            <div class="card-body" style="padding: 1rem 2.25rem !important;">
              <div class="form-group row" >
                <label for="example-tel-input" class="col-4 col-form-label">Designation</label>
                <div class="col-8">
                  <input class="form-control form-control-solid" value="" name="designation" id="medicinename" placeholder="Enter designation" type="text" />
                </div>
              </div>
              <div class="form-group row" >
                <label for="example-tel-input" class="col-4 col-form-label">Department</label>
                <div class="col-8">
                  <input class="form-control form-control-solid" value="" name="department" id="medicinename" placeholder="Enter department" type="text" />
                </div>
              </div>
              <div class="form-group row" >
                <label for="example-tel-input" class="col-4 col-form-label">Email</label>
                <div class="col-8">
                  <input class="form-control form-control-solid" value="" name="email" placeholder="Enter email address" type="text" />
                </div>
              </div>
            </div>
        </div>

        </div>
        </form>
    </div>
    </div>
  </div>
  block extra_script
    script.
      $('#employeesave').on('click',function(){
        $('#employeesaveform').submit();
      });
